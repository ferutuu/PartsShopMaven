<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.ferutuu.partsshop.CartController">
    <fx:include source="BaseTemplate.fxml"/>
    <center>
        <VBox alignment="CENTER" spacing="10.0" prefWidth="400.0" prefHeight="400.0">
            <TableView fx:id="cartTable">
                <columns>
                    <TableColumn fx:id="idColumn" text="ID" />
                    <TableColumn fx:id="nameColumn" text="Name" />
                    <TableColumn fx:id="typeColumn" text="Type" />
                    <TableColumn fx:id="priceColumn" text="Price" />
                </columns>
            </TableView>
            <Button text="Checkout" onAction="#handleCheckout"/>
            <Button text="Back to Components" onAction="#handleBackToComponents"/>
        </VBox>
    </center>
</BorderPane>