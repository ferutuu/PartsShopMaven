<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.ferutuu.partsshop.CartController" style="-fx-background-color: #f4f4f9;">
    <top>
        <HBox alignment="CENTER" style="-fx-background-color: rgb(171,28,28);" prefHeight="100.0">
            <Label text="Parts Shop" style="-fx-text-fill: white; -fx-font-size: 36px; -fx-font-weight: bold; -fx-padding: 20 0;" />
        </HBox>
    </top>
    <center>
        <VBox alignment="CENTER" spacing="15.0" prefWidth="500.0" prefHeight="400.0">

            <TableView fx:id="cartTable" style="-fx-border-color: #333333; -fx-border-width: 1; -fx-background-color: #ffffff; -fx-border-radius: 5px;"
                       prefHeight="300.0" prefWidth="500.0">
                <columns>
                    <TableColumn fx:id="idColumn" text="ID" style="-fx-alignment: CENTER; -fx-font-size: 14px; -fx-pref-width: 100px;"/>
                    <TableColumn fx:id="nameColumn" text="Name" style="-fx-alignment: CENTER; -fx-font-size: 14px; -fx-pref-width: 300px;"/>
                    <TableColumn fx:id="typeColumn" text="Type" style="-fx-alignment: CENTER; -fx-font-size: 14px; -fx-pref-width: 200px;"/>
                    <TableColumn fx:id="priceColumn" text="Price" style="-fx-alignment: CENTER; -fx-font-size: 14px; -fx-pref-width: 200px;"/>
                </columns>
            </TableView>

            <Label text=" " style="-fx-font-size: 16px;" />

            <HBox alignment="CENTER" spacing="30.0" style="-fx-padding: 20px 0;">
                <Button text="Checkout" onAction="#handleCheckout" style="-fx-font-size: 18px; -fx-padding: 10px 20px; -fx-background-color: rgb(171,28,28); -fx-text-fill: white; -fx-border-radius: 5px;"/>
                <Button text="Back to Components" onAction="#handleBackToComponents" style="-fx-font-size: 18px; -fx-padding: 10px 20px; -fx-background-color: rgb(171,28,28); -fx-text-fill: white; -fx-border-radius: 5px;"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>



