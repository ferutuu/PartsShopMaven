<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="org.ferutuu.partsshop.LoginController" style="-fx-background-color: lightgrey;">
    <top>
        <HBox alignment="CENTER" style="-fx-background-color: rgb(171,28,28);" prefHeight="100.0">
            <Label text="Parts Shop" style="-fx-text-fill: white; -fx-font-size: 40; -fx-font-weight: bold;" />
        </HBox>
    </top>
    <center>
        <VBox alignment="CENTER" prefHeight="400.0" prefWidth="400.0" spacing="20.0">
            <VBox alignment="CENTER" spacing="10.0">
                <Label text="Username" style="-fx-font-size: 18;" />
                <TextField fx:id="usernameField" promptText="Username" style="-fx-max-width: 200; -fx-font-size: 16;" />
            </VBox>
            <VBox alignment="CENTER" spacing="10.0">
                <Label text="Password" style="-fx-font-size: 18;" />
                <PasswordField fx:id="passwordField" promptText="Password" style="-fx-max-width: 200; -fx-font-size: 16;" />
            </VBox>
            <HBox alignment="CENTER" spacing="40.0">
                <Button onAction="#handleLoginButtonAction" text="Login" style="-fx-font-size: 18; -fx-padding: 10 20 10 20;" />
                <Button onAction="#handleRegisterButtonAction" text="Register" style="-fx-font-size: 18; -fx-padding: 10 20 10 20;" />
            </HBox>
        </VBox>
    </center>
</BorderPane>


