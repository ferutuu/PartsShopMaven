<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="org.ferutuu.partsshop.RegisterController" style="-fx-background-color: #f4f4f9;">
    <top>
        <HBox alignment="CENTER" style="-fx-background-color: rgb(171,28,28);" prefHeight="100.0">
            <Label text="Parts Shop" style="-fx-text-fill: white; -fx-font-size: 36px; -fx-font-weight: bold; -fx-padding: 20 0;" />
        </HBox>
    </top>
    <center>
        <VBox alignment="CENTER" prefHeight="400.0" prefWidth="400.0" spacing="15.0">

            <VBox alignment="CENTER" spacing="10.0">
                <Label text="Username" style="-fx-font-size: 18px; -fx-text-fill: #333333;" />
                <TextField fx:id="usernameField" promptText="Enter your username" style="-fx-max-width: 250px; -fx-font-size: 16px; -fx-padding: 10px;" />
            </VBox>


            <VBox alignment="CENTER" spacing="10.0">
                <Label text="Password" style="-fx-font-size: 18px; -fx-text-fill: #333333;" />
                <PasswordField fx:id="passwordField" promptText="Enter your password" style="-fx-max-width: 250px; -fx-font-size: 16px; -fx-padding: 10px;" />
            </VBox>


            <HBox alignment="CENTER" spacing="25.0" style="-fx-padding: 20px 0;">
                <Button onAction="#handleRegisterButtonAction" text="Register" style="-fx-font-size: 18px; -fx-padding: 10px 20px; -fx-background-color: rgb(171,28,28); -fx-text-fill: white; -fx-border-radius: 5px;"/>
                <Button onAction="#handleBackToLoginButtonAction" text="Back to Login" style="-fx-font-size: 18px; -fx-padding: 10px 20px; -fx-background-color: rgb(171,28,28); -fx-text-fill: white; -fx-border-radius: 5px;"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>



